<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".android.Android0002Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="本节介绍Android里的基本的视图组件的各种View事件，如何使用Kotlin进行处理，请查日志输出信息" />

        <Button
            android:id="@+id/clickEvent_Button_Android0002Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Button的点击事件"
            android:textAllCaps="false" />

        <CheckBox
            android:id="@+id/onCheckedChang_CheckBox_Android0002Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="CheckBox的onCheckedChange事件"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="RadioGroup和RadioButton的示例" />

        <RadioGroup
            android:id="@+id/radioGroup_Android0002Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio0_RadioButton_Android0002Activity"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Radio0"
                android:textAllCaps="false" />

            <RadioButton
                android:id="@+id/radio1_RadioButton_Android0002Activity"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Radio1"
                android:textAllCaps="false" />
        </RadioGroup>
    </LinearLayout>
</ScrollView>